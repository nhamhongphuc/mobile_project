<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <View
        android:id="@+id/view_all"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/dialog_color" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/view_all"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/add_task"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/textbox_layout"
        android:ems="10"
        android:hint="@string/enter_title"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:autofillHints="" />

    <EditText
        android:id="@+id/ed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:background="@color/nav_color"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <View
        android:id="@+id/view_timer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/ed_description"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_timer" />

    <View
        android:id="@+id/view_tag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/ed_description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/view_timer"
        android:background="@drawable/ic_tag" />

    <View
        android:id="@+id/view_flag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/ed_description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/view_tag"
        android:background="@drawable/ic_flag" />

    <View
        android:id="@+id/view_send"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/ed_description"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/view_all"
        android:background="@drawable/ic_send" />

</RelativeLayout>