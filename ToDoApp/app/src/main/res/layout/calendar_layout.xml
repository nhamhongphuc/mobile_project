<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:id="@+id/view_add"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/view_navbar"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="-33dp"
        android:background="@drawable/ic_add"
        android:translationZ="90dp"
        android:visibility="visible" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/view_navbar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_color">

        <View
            android:id="@+id/view_index"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_home_2" />

        <TextView
            android:id="@+id/tv_index_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="@string/index"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_calender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_calendar_clicked" />

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="94dp"
            android:layout_marginTop="5dp"
            android:text="Calendar"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_note"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_note" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="113dp"
            android:text="@string/note"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_user" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
        android:id="@+id/dayDatePicker"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="512dp"
        android:background="#DAEDDA" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dayDatePicker"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="22dp"
        android:text="Calendar"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <View
        android:id="@+id/view_img"
        android:layout_width="227dp"
        android:layout_height="227dp"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_above="@id/view_navbar"
        android:layout_marginBottom="140dp"
        android:background="@drawable/ic_checklist_rafiki_1" />

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:layout_above="@id/view_navbar"
        android:text="Nothing to do in this day?"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/lstview_calendar"
        android:layout_width="350dp"
        android:layout_height="397dp"
        android:layout_above="@id/view_navbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>