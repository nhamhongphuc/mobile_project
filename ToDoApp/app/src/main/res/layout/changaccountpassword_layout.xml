<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_back"
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="264dp"
        android:background="#595959" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/textbox_layout"
        android:ems="10"
        android:hint="**********"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_enternewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="201dp"
        android:text="Enter new password"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_changeaccountpassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/view_back"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="69dp"
        android:outlineProvider="none"
        android:singleLine="false"
        android:text="Change account Password"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="155dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/view_back"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/btn_edit"
        android:background="@drawable/btn_colorgrey"
        android:text="Cancel"
        android:textColor="#8687E7"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit"
        android:layout_width="155dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/btn_color"
        android:text="Edit" />

    <TextView
        android:id="@+id/tv_enteroldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="208dp"
        android:text="Enter old password"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/textbox_layout"
        android:ems="10"
        android:hint="**********"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:layout_alignStart="@+id/view_back"
        android:layout_alignTop="@+id/view_back"
        android:layout_alignEnd="@+id/view_back"
        android:layout_centerInParent="false"
        android:layout_marginStart="34dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/ic_divider_2" />

</RelativeLayout>